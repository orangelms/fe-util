{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "jest"
    ],
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [".dumi/tmp/*"],
      "@fe-util/common": ["src"],
      "@fe-util/common/*": ["src/*", "*"]     
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [".dumirc.ts", "src/**/*","src/**/*.ts"]
}
